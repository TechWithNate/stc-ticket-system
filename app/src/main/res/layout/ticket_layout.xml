<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:strokeWidth="0dp"
    android:layout_margin="5dp"
    app:cardElevation="10dp"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/place_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger Name"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John"
            android:layout_below="@+id/tv_name"
            android:id="@+id/passenger_name"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9E9E9E"
            android:layout_below="@+id/passenger_name"
            android:id="@+id/div0"/>


        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="From: "
            android:layout_below="@+id/div0"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accra"
            android:layout_below="@+id/tv_from"
            android:id="@+id/from_location"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Depature Time"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:00am"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_time"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9E9E9E"
            android:layout_below="@+id/from_location"
            android:id="@+id/div1"/>

        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To"
            android:layout_below="@+id/div1"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="15sp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accra"
            android:layout_below="@+id/tv_to"
            android:id="@+id/to_location"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9E9E9E"
            android:layout_below="@+id/to_location"
            android:id="@+id/div2"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_below="@+id/div2"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_sit_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Seat No."
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AK01"
                    android:layout_below="@+id/tv_sit_no"
                    android:id="@+id/seat_no"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9E9E9E"
                    android:layout_below="@+id/seat_no"
                    android:id="@+id/div3"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">



                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Depature Date"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="23, June 2021"
                    android:layout_below="@+id/tv_date"
                    android:id="@+id/date"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="5dp"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#9E9E9E"
                    android:layout_below="@+id/date"
                    android:id="@+id/div4"/>


            </RelativeLayout>

        </LinearLayout>



    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>